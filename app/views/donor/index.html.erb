<div class="container position-relative z-6 text-center pt-3 mt-lg-7 mt-xl-10 ">
  <div class="container mt-4">
    <h5 class="text-center">Search for Blood Donors</h5>
    <form>
      <div class="row g-2 justify-content-center">
        <!-- Blood Group Selection -->
        <div class="col-md-2">
          <div class="form-group">
            <select class="form-select shadow p-2 mb-2 bg-body-tertiary rounded " id="bloodGroup">
              <option value="" selected disabled>Blood Group</option>
              <option value="A+">A+</option>
              <option value="A-">A-</option>
              <option value="B+">B+</option>
              <option value="B-">B-</option>
              <option value="AB+">AB+</option>
              <option value="AB-">AB-</option>
              <option value="O+">O+</option>
              <option value="O-">O-</option>
            </select>
          </div>
        </div>

        <div class="col-md-5">
          <div class="form-group position-relative">
            <div class="input-group ">
              <!-- Location Dropdown -->
              <select class="form-select p-2 pe-5 shadow p-2 mb-2 bg-body-tertiary rounded" id="location">
                <option value="" selected disabled>Location</option>
                <!-- Location options -->
              </select>

              <!-- GPS Icon Button -->
              <button class="btn btn-outline-dark p-2 mb-2 bg-body-tertiary rounded" type="button" id="getLocation">
                <i class="bi bi-crosshair text-secondary fs-4-"></i>
              </button>

            </div>
          </div>
        </div>
        <!-- Search Button -->
        <div class="col-md-1">
          <button class="btn btn-danger w-60">
            <i class="bi bi-search text-white fs-5"></i>
          </button>
        </div>


      </div>
    </form>
  </div>
</div>



<div class="container-fluid mt-3 ">

  <div class="row ms-4 ">

    <p class="mb-2">Submit the Details Below to Connect with Donors.</p>

    <div class="col input-group shadow p-1 mb-4 bg-body-tertiary rounded ">

      <!-- Country Code Dropdown -->
      <span class="input-group-text bg-white border-0">
        <select class="form-select border-0">
          <option selected>+1</option>
          <option>+91</option>
          <option>+44</option>
        </select>
      </span>

      <!-- Phone Number -->
      <input type="text" class="form-control border-0" placeholder="Phone Number">

      <!-- Divider -->
      <span class="input-group-text bg-white border-0">|</span>

      <!-- Required Date -->
      <input type="date" class="form-control border-0">

      <!-- Divider -->
      <span class="input-group-text bg-white border-0">|</span>

      <!-- Required Units -->
      <input type="number" class="form-control border-0" placeholder="Required Units">

      <!-- Divider -->
      <span class="input-group-text bg-white border-0">|</span>

      <!-- Reason -->
      <input type="text" class="form-control border-0" placeholder="Reason">

    </div>

    <div class="col-md-2">
      <!-- Request Button -->
      <button class="btn btn-danger fw-bold px-1 py-3 rounded-end">
        Request Available Donors
      </button>
    </div>

  </div>
</div>



