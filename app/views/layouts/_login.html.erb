<!-- Background Section (Only visible on md and above) -->
<div class="container-fluid bg-danger text-white d-none d-md-flex flex-column justify-content-center align-items-center" style="min-height: 40vh;">
  <div class="text-center w-100">
    <h3>Log in to Your Account</h3>
    <p>Access your account and manage your donor information.</p>
  </div>
</div>

<!-- Unified Form Section -->
<div class="container position-relative">

  <!-- Mobile View: Centered card -->
  <div class="d-md-none d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-4 pb-5 shadow w-100 mx-auto" style="max-width: 650px;">
      <!-- Heading on small screens -->
      <div class="text-center mb-3">
        <h3>Log in to Your Account</h3>
        <p>Access your account and manage your donor information.</p>
      </div>
      <p class="text-start mb-4" style="font-weight: 700;">Log in</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% resource.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>

        <!-- Email -->
        <div class="mb-3 row">
          <label class="col-md-3 col-form-label fw-semibold">Email</label>
          <div class="col-md-9">
            <%= f.email_field :email, class: "form-control validate-me #{resource.errors[:email].any? ? 'is-invalid' : (resource.errors.any? ? 'is-valid' : '')}", placeholder: "Email address" %>
            <% if resource.errors[:email].any? %>
              <div class="invalid-feedback"><%= resource.errors[:email].first %></div>
            <% end %>
          </div>
        </div>

        <!-- Password -->
        <div class="mb-3 row">
          <label class="col-md-3 col-form-label fw-semibold" for="password">Password</label>
          <div class="col-md-9">
            <%= f.password_field :password, class: "form-control validate-me #{resource.errors[:password].any? ? 'is-invalid' : (resource.errors.any? ? 'is-valid' : '')}", placeholder: "Password", id: "password" %>
            <% if resource.errors[:password].any? %>
              <div class="invalid-feedback"><%= resource.errors[:password].first %></div>
            <% end %>
          </div>
        </div>

        <!-- Remember Me Checkbox -->
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <label class="form-check-label" for="remember_me">Remember me</label>
        </div>

        <!-- Submit -->
        <%= f.submit "Log in", class: "btn btn-danger w-50 d-block mx-auto mt-4" %>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to 'Forgot your password?', new_password_path(:user), class: 'text-danger' %>
      </div>
    </div>
  </div>

  <!-- Desktop View: Unchanged -->
  <div class="d-none d-md-block">
    <div class="card p-4 pb-5 shadow w-100 mx-auto" style="max-width: 650px; margin-top: -120px;">
