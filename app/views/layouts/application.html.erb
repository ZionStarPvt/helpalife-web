
<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "Voluntary Blood Donors online Community" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= yield :head %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Phone Number Input with Flags</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css">
  <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
  <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>
  <link rel="apple-touch-icon" href="/icon.png">
  <%# Includes all stylesheet files in app/assets/stylesheets %>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_importmap_tags %>
  <%= javascript_include_tag "location_search" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

</head>
<body>

<% flash.each do |key, message| %>
  <div class="position-fixed start-50 translate-middle-x alert <%= bootstrap_flash_class(key) %> alert-dismissible fade show text-center"
       role="alert"
       style="top: 80px; min-width: 300px; z-index: 9999;">
    <%= message %>
  </div>
<% end %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<!-- Include the Header -->
<%= render 'layouts/partials/header' %>
<%= yield %>
<div id="map" style="max-height: 600px; width: 1000px; margin-top: 20px;"></div>
<script defer src="https://maps.googleapis.com/maps/api/js?key=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx&libraries=places&callback=initMap"></script>
<script type="module" src="https://ajax.googleapis.com/ajax/libs/@googlemaps/extended-component-library/0.6.11/index.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const flashMessages = document.querySelectorAll('.alert');
        flashMessages.forEach((msg) => {
            setTimeout(() => {
                msg.style.transition = 'opacity 0.5s ease-out';
                msg.style.opacity = '0';
                setTimeout(() => msg.remove(), 500); // removes it after fade out
            }, 10000); // 10 seconds
        });
    });
</script>

<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", defer: true %>
<%= yield :javascript %>
</body>
</html>